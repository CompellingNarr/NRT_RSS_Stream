<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="log-path">/tmp/log_idaas_im_proc_tool</Property>
    </Properties>
    <Appenders>
        <RollingFile name="RollingFile" fileName="${log-path}/idaas_im_proc_tool.log"
                                         filePattern="${log-path}/idaas_im_proc_tool-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <pattern>%d{DEFAULT} %-5p %c: %m%n</pattern>
                <!-- <pattern>%d{DEFAULT} %-5p %C: %m%n</pattern> -->
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="1 MB" />
            </Policies>
            <DefaultRolloverStrategy max="100" />
        </RollingFile>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout>
                <!-- <pattern>%m%n</pattern> -->
                <pattern>%c{1}: %m%n</pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="trace" additivity="false">
            <AppenderRef ref="RollingFile" level="TRACE" />
            <AppenderRef ref="STDOUT" level="INFO" />
        </Root>
        <!--
<Logger name="root" level="debug" additivity="false">
<appender-ref ref="RollingFile" level="debug" />
</Logger>
<Root level="debug" additivity="false">
<AppenderRef ref="RollingFile" />
</Root>
        -->
    </Loggers>
</Configuration>

